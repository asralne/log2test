{
    "name": "ousamabenyounes/log2test",
    "description": "Transorm your production logs to simple selenium/phpunit tests...",
    "license": "Apache-2.0",
    "require": {
        "kassner/log-parser": "~1.0",
        "symfony/yaml": "^3.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "cedriclombardot/twig-generator": "^1.1",
        "jasny/twig-extensions": "^1.0",
        "phpunit/phpunit": "5.5.*",
        "symfony/filesystem": "^3.1"
    },
    "scripts": {
        "post-install-cmd": [
            "Log2Test\\Installer::postInstall",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Log2Test\\Installer::postInstall",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "config/parameters.yml"
        }
    },

    "autoload": {
        "psr-4" : {
            "Log2Test\\" : "lib/"
        }
    },
    "config":  {
        "bin-dir" : "bin/"
    }
}
